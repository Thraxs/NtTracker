@using NtTracker.Resources.Shared
@{
    ViewBag.Title = SharedStrings.ApplicationName;
}

<div class="page-header">
    <h1>@SharedStrings.ApplicationName</h1>
</div>
<div>
    <p>
        @SharedStrings.HomeDescription1
    </p>
    <p>
        @SharedStrings.HomeDescription2
    </p>
</div>
<div class="row">
    @if (User.IsInRole("Admin"))
    {
    <div class="col-md-6">
        <h2>@SharedStrings.Patients</h2>
        <p>
            @SharedStrings.PatientsSection
        </p>
        <p>
            @Html.ActionLink("Pacientes »", "List", "Patient", null, new {@class = "btn btn-success"})
        </p>
    </div>

    <div class="col-md-6">
        <h2>@SharedStrings.Admin</h2>
        <p>
            @SharedStrings.AdministrationSection
        </p>
        <p>
            @Html.ActionLink("Administración »", "List", "Operation", null, new {@class = "btn btn-success"})
        </p>
    </div>
    }
    else
    {
    <div class="col-md-12">
        <h2>@SharedStrings.Patients</h2>
        <p>
            @SharedStrings.PatientsSection
        </p>
        <p>
            @Html.ActionLink("Pacientes »", "List", "Patient", null, new { @class = "btn btn-success" })
        </p>
    </div>
    }
</div>